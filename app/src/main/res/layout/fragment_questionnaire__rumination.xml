<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".questionnaire.Questionnaire_Rumination_Fragment"
    android:id="@+id/questionnaire_rumination_constraint_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/coordinatorLayout_questionnaire_rumination"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/questionnaire_rumination_heading1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/comfortaa"
                android:text="@string/questionnaire_rumination_heading1"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/questionnaire_rumination_properties_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/comfortaa"
                android:text="@string/questionnaire_rumination_item1"
                android:textAlignment="center"
                android:textAllCaps="false"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_rumination_heading1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/questionnaire_rumination_properties_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/comfortaa"
                android:text="@string/questionnaire_approval_value"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_rumination_properties_heading" />

            <SeekBar
                android:id="@+id/questionnaire_rumination_barProperties"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:indeterminate="false"
                android:max="9"
                android:progress="0"
                android:progressDrawable="@drawable/questionnaire_slider_track"
                android:splitTrack="false"
                android:thumb="@drawable/questionnaire_slider_thumb"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_rumination_properties_value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/questionnaire_rumination_properties_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa"
                android:text="@string/questionnaire_approval_no"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_rumination_barProperties" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/questionnaire_rumination_properties_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa"
                android:text="@string/questionnaire_approval_yes"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_rumination_barProperties" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/questionnaire_rumination_rehash_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:fontFamily="@font/comfortaa"
                android:text="@string/questionnaire_rumination_item2"
                android:textAlignment="center"
                android:textAllCaps="false"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_rumination_barProperties" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/questionnaire_rumination_rehash_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/comfortaa"
                android:text="@string/questionnaire_approval_value"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_rumination_rehash_heading" />

            <SeekBar
                android:id="@+id/questionnaire_rumination_barRehash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:indeterminate="false"
                android:max="9"
                android:progress="0"
                android:progressDrawable="@drawable/questionnaire_slider_track"
                android:splitTrack="false"
                android:thumb="@drawable/questionnaire_slider_thumb"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_rumination_rehash_value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/questionnaire_rumination_rehash_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa"
                android:text="@string/questionnaire_approval_no"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_rumination_barRehash" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/questionnaire_rumination_rehash_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa"
                android:text="@string/questionnaire_approval_yes"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_rumination_barRehash" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/questionnaire_rumination_turnoff_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:fontFamily="@font/comfortaa"
                android:text="@string/questionnaire_rumination_item3"
                android:textAlignment="center"
                android:textAllCaps="false"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_rumination_barRehash" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/questionnaire_rumination_turnoff_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/comfortaa"
                android:text="@string/questionnaire_approval_value"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_rumination_turnoff_heading" />

            <SeekBar
                android:id="@+id/questionnaire_rumination_barTurnOff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:indeterminate="false"
                android:max="9"
                android:progress="0"
                android:progressDrawable="@drawable/questionnaire_slider_track"
                android:splitTrack="false"
                android:thumb="@drawable/questionnaire_slider_thumb"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_rumination_turnoff_value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/questionnaire_rumination_turnoff_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa"
                android:text="@string/questionnaire_approval_no"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_rumination_barTurnOff" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/questionnaire_rumination_turnoff_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa"
                android:text="@string/questionnaire_approval_yes"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_rumination_barTurnOff" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/questionnaire_rumination_dispute_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:fontFamily="@font/comfortaa"
                android:text="@string/questionnaire_rumination_item4"
                android:textAlignment="center"
                android:textAllCaps="false"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_rumination_barTurnOff" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/questionnaire_rumination_dispute_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/comfortaa"
                android:text="@string/questionnaire_approval_value"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_rumination_dispute_heading" />

            <SeekBar
                android:id="@+id/questionnaire_rumination_barDispute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:indeterminate="false"
                android:max="9"
                android:progress="0"
                android:progressDrawable="@drawable/questionnaire_slider_track"
                android:splitTrack="false"
                android:thumb="@drawable/questionnaire_slider_thumb"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_rumination_dispute_value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/questionnaire_rumination_dispute_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa"
                android:text="@string/questionnaire_approval_no"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_rumination_barDispute" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/questionnaire_rumination_duspute_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/comfortaa"
                android:text="@string/questionnaire_approval_yes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_rumination_barDispute" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.9" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout_questionnaire_rumination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/questionnaire_rumination_constraint_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_bar_questionnaire_rumination"
            style="@style/Widget.Material3.BottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:fabAlignmentMode="end"
            app:menu="@menu/bottom_navigation_questionnaire" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/questionnaire_rumination_fab_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_anchor="@id/bottom_bar_questionnaire_rumination"
            app:srcCompat="@drawable/baseline_arrow_forward_24" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>